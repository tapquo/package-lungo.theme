
/* ==== Any tablet ==== */
@media only screen and (min-width: 768px)
  body
    & > section[data-children]
      margin-right: 0.5em


/* ==== Any phone ==== */
@media only screen and (max-width: 767px)
  body
    & > section
      & > header
        border-radius 0
    & > aside
      box-shadow 0 0 0 6px darken(ASIDE, 25%)
